@using User.Entities.Entities;
@model List<UserDetails>;


@{
    Layout = "Admin_Layout";
    ViewData["Title"] = "User";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4>User</h4>
        <div class="text-muted">@DateTime.Now.ToString("dddd MMMM dd, yyyy, h:mm:ss tt")</div>
    </div>
</div>

<form asp-action="RedirectToUser" method="post" class="form-inline mb-3">
    <div class="form-check-inline">
        <input type="number" name="bookId" class="form-control mr-2" placeholder="Enter User ID" />
    </div>
    <button type="submit" class="btn btn-outline-warning">View User</button>
    @if (TempData["Error"] != null)
    {
        <p class="text-danger">@TempData["Error"]</p>
    }
    <div class="float-end">
        <button class="btn btn-outline-warning" asp-controller="User" asp-action="AddUser">ADD New User</button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Name </th>
            <th>Role</th>
            <th>Phone Number</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Name</td>
                <td>@book.Role</td>
                <td>@book.PhoneNumber</td>
                <td>@book.CreatedDate</td>
            </tr>
        }
        </tr>
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        <li class="page-item disabled">
            <span class="page-link">«</span>
        </li>
        <li class="page-item active">
            <span class="page-link">1</span>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">»</a>
        </li>
    </ul>
</nav>
