<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-cust text-white p-3">
            <h5 class="text-uppercase mb-4">Navigation</h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link active" asp-controller="User" asp-action="ViewAllUser"><i class="fas fa-user"></i> User</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Mission" asp-action="MissionSkillDetail"><i class="fas fa-bullseye"></i> Mission</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="MissionTheme" asp-action="MissionThemeDetails"><i class="fas fa-book"></i> Mission Theme</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Mission" asp-action="MissionSkillDetail"><i class="fas fa-wrench"></i> Mission Skills</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="#"><i class="fas fa-folder"></i> Mission Application</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="flex-fill p-4">
            @RenderBody()
        </main>
    </div>
</body>
</html>
