@{
    // ViewData["Title"] = "Dashboard";
}

<div class="container-fluid d-flex">
    @* Sidebar Placeholder *@
    @* @await Html.PartialAsync("_Sidebar") *@

    <div class="content w-100" style="margin-left: 300px;">
        @* Header Placeholder *@
        @* @await Html.PartialAsync("_Header") *@

        <div class="info my-4 text-justify text-muted" style="margin: 20px;">
            <h3 class="mb-4">Dashboard</h3>

            @* Example Label *@
            <div class="userLabel border-bottom pb-2 mb-4" style="font-size: 28px; font-weight: 400;">
                Welcome, Admin
            </div>

            @* Add Button *@
            <button class="btn btn-outline-warning btnAdd">
                <i class="bi bi-plus-circle btnAddIcon me-2"></i>
                <span class="add">Add</span>
            </button>

            @* Search Box *@
            <div class="mt-3">
                <input type="text" class="form-control searchBox" placeholder="Search..." style="width: 400px;" />
            </div>

            @* Table Placeholder *@
            <div class="tableData mt-4 p-3 border bg-white">
                <table class="table">
                    <thead class="bg-light">
                        <tr>
                            <th>Column 1</th>
                            <th>Column 2</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Data 1</td>
                            <td>Data 2</td>
                            <td>
                                <button class="btnedit" title="Edit">
                                    <i class="bi bi-pencil-square text-warning"></i>
                                </button>
                                <button class="btndelete" title="Delete">
                                    <i class="bi bi-trash text-dark"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
